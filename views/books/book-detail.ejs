<%- include('../partials/header.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>


    <body>
        <%- include('../partials/navigation.ejs') %>
        <main class="centered">
            <h1><%= book.title %></h1>
            <hr>
            <div class="image">
                <img src="/<%= book.imageUrl %>" alt="<%= book.title %>">
            </div>
            <h2><%= book.price %> kn</h2>
            <p><%= book.description %></p>
            <% if (currentUser) { %>
                                    <form action="/cart" method="post">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="bookId" value="<%= book._id %>">
                                        <input type="hidden" name="bookType" value="Book">
                                        <button class="btn btn-lg" type="submit">Dodaj u košaricu</button>
                                    </form>
                                    <% } %>
            <% if (currentUser) { %>
            <%if (currentUser.status === "admin") { %> 
                <div class="card__actions">
                    <a href="/edit-book/<%= book._id %>?edit=true" class="btn">Uredi</a>
                    <input type="hidden" value="<%= book._id %>" name="bookId">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <form class="product-form" action="/delete-book/<%= book._id %>" method="GET" enctype="multipart/form-data">
                        <button class="btn">Obriši</button>
                    </form>
                </div>
            <% } %>
            <% } %>
            <div class="col-12">
                </div>
               <main>
                    <% if (relatedBooks.length > 1) { %>
                   <h2 class="centered related-products"> Slične knjige </h2>
                       <div class="grid">
                           <% for (let rb of relatedBooks) { %>
                            <% if(rb.title != book.title) {%>
                               <article class="card product-item">
                                   <header class="card__header">
                                       <h1 class="product__title">                                        
                                           <%= rb.title %>
                                       </h1>
                                   </header>
                                   <div class="card__image">
                                       <a href="/books/<%= rb.id %>"><img src="/<%= rb.imageUrl %>" alt="<%= rb.title %>"></a>
                                   </div>
                                   <div class="card__content">
                                       <h2 class="product__price">
                                           <%= rb.price %> kn
                                       </h2>
                                       <p class="product__description">
                                           <%= rb.autor %>
                                       </p>
                                   </div>
                                   <div class="card__actions">
                                       <a href="/books/<%= rb._id %>" class="btn">Više</a>
                                       </div>
                                      
                               </article>
                               <% } %>
                               <% } %>
                               
                       </div>
                       <% } %>
        </main>
        <%- include('../partials/end.ejs') %>